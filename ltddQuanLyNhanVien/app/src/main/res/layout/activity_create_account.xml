<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background_create"
    tools:context=".ui.register.CreateAccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create New"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_person_add_alt_1_24"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="40dp">

                <EditText
                    android:id="@+id/edt_crEmai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="9"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_edt_input2"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:drawableStart="@drawable/custom_email_icon"
                    android:drawablePadding="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/edt_crVerCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="VerCode"
                        android:padding="12dp"
                        android:background="@drawable/custom_edt_input2"
                        android:paddingStart="12dp"
                        android:drawableStart="@drawable/custom_announcement_icon"
                        android:drawablePadding="16dp"/>

                    <Button
                        android:id="@+id/bt_crvercode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/custom_button1"
                        android:layout_marginLeft="10dp"
                        android:text="VerCode"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/edt_crPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:padding="12dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_edt_input2"
                    android:paddingStart="12dp"
                    android:drawableStart="@drawable/custom_lock_icon"
                    android:drawablePadding="16dp"/>

                <EditText
                    android:id="@+id/edt_crComfirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:hint="Confirm password"
                    android:padding="12dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_edt_input2"
                    android:paddingStart="12dp"
                    android:drawableStart="@drawable/custom_lock_icon"
                    android:drawablePadding="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="40dp">

                    <Button
                        android:id="@+id/bt_crClear"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Clear"
                        android:letterSpacing="0.3"
                        android:layout_margin="10dp"
                        android:background="@drawable/custom_button1"/>

                    <Button
                        android:id="@+id/bt_Creeat"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.3"
                        android:layout_margin="10dp"
                        android:text="Create"
                        android:background="@drawable/custom_button1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>